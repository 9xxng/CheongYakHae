<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/announcement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Announcement Title"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/house_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House Type"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/house_detail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House Detail Type"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/announcement_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Announcement Date"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/supply_household_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supply Household Count"
        android:textSize="12sp" />

    <!-- Contact number field -->
    <TextView
        android:id="@+id/contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:textSize="12sp" />

</LinearLayout>
